@using Logal.Models

<Header CompanyName="@Model.Name"></Header>

<table>
    <thead>
        <tr>
            <th>Nom</th>
            <th>Quantity</th>
            <th>Prix Unitaire</th>
            <th>Prix</th>
        </tr>
    </thead>
    <tbody>
        @foreach (Article item in Model.Articles)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Quantity</td>
                <td>@item.UnitPrice</td>
                <td>@((item.UnitPrice * item.Quantity).ToString("#.00"))</td>
            </tr>
        }
    </tbody>
    <tfoot>
        <tr>
            <th colspan="3">Prix Total</th>
            <th>@(Model.Articles.Sum(a => a.Quantity * a.UnitPrice))</th>
        </tr>
    </tfoot>
</table>

@code {
    [Parameter]
    public FactureModel Model { get; set; } = null!;
}
